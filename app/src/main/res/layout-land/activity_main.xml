<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/texto_conteo_textview" />

    <EditText
        android:id="@+id/conteo_edittext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="false"
        android:text="0"/>

        <Button
            android:id="@+id/contar_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/texto_contar_button" />

        <Button
            android:id="@+id/reiniciar_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/texto_reiniciar_button" />


</LinearLayout>